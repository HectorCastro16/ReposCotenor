@model IEnumerable<CapaEntidades.entUsuario>

@{
    ViewBag.Title = "ListaUsuarioEstados";
    Layout = "~/Views/MasterPage.cshtml";
}
<div id="content">
    <section>
    <div class="section-body contain-lg">
<div class="row">
    <div class="col-lg-12">
        <h4 style="text-align:center;" >@ViewBag.mensaje</h4>
    </div><!--end .col -->
    <div class="col-md-8">
        <article class="margin-bottom-xxl">
            
        </article>
    </div><!--end .col -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table no-margin">
                        <thead>
                            <tr class="gradeA odd selected" role="row">
                                <th>#</th>
                                <th>Codigo</th>
                                <th>Usuario</th>
                                <th>Correo</th>
                                <th>Estado</th>
                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                             @{ int i = 0; }
               @foreach (var item in Model)
               {
                   i++;
                            <tr>
                                <td>@i</td>
                                <td> @Html.DisplayFor(modelItem => item.Usu_Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Persona.Per_Nombres)</td>
                                <td>@Html.DisplayFor(modelItem => item.Persona.Per_Correo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Usu_Estado)</td>
                                <td>@Html.ActionLink("Accion","Accion" , new{idusuario = item.Usu_Id})</td>
                            </tr>
               }

                        </tbody>
                    </table>
                </div><!--end .table-responsive -->
            </div><!--end .card-body -->
        </div><!--end .card -->
    </div><!--end .col -->
</div><!--end .row -->
              
    </div>
        </section>
        
        </div>


