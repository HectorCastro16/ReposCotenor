@model IEnumerable<CapaEntidades.entUsuario>

@{
    ViewBag.Title = "Lista de supervisores";
    Layout = "~/Views/MasterPage.cshtml";
}
<section>
    <div class="section-body contain-lg">
        <h2>Lista Supervisores</h2>
        <div class="form">
            <div class="form-group">
                <a href="#" class="btn ink-reaction btn-primary"><i class="md md-add"></i> Nuevo</a>
            </div>
        </div>
    </div>
    <div class="section-body contain-lg">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-body no-padding">
                    <div class="card">
                        <div class="table-responsive no-margin">
                            <table id="datatable1" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            CODIGO
                                        </th>
                                        <th>
                                            ASESOR
                                        </th>
                                        <th>CLIENTES ASIGNADOS</th>
                                        <th>Opcion</th>
                                    </tr>
                                </thead>

                                @foreach (var item in Model)
                                {
                                    String color = "";
                                    if (item.Contador > 0)
                                    {
                                        color = "aquamarine";
                                    }
                                    <tr style="background-color:@color">

                                        <td> @Html.DisplayFor(modelItem => item.Usu_Codigo)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Persona.NombreCompleto)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Contador)</td>
                                        <td><a href="@Url.Action("ExtraerDatosAsignar", "SupervisorCall", new { iduser = item.Usu_Id, usuario = item.Persona.NombreCompleto })" class="btn ink-reaction btn-info"><i class="md md-undo"></i> Asignar</a></td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>