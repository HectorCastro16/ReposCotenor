@model IEnumerable<CapaEntidades.entUsuario>

@{
    ViewBag.Title = "lstUsuariosEstadoAsignacionLlamadas";
    Layout = "~/Views/MasterPage.cshtml";
}
<div id="content" style="position:absolute;top:10px">
    <section>
        <h1 class="text-primary" style="text-align:center; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">ASIGNAR DATA</h1>
        <div class="section-body contain-lg">

            <div class="row">
                <div class="col-lg-12">
                    <div class="card-body no-padding">
                        <div class="card">
                            <div class="table-responsive no-margin">
                                <table class="table table-striped no-margin">
                                    <tr>
                                        <th>
                                            CODIGO
                                        </th>
                                        <th>
                                            ASESOR
                                        </th>
                                        <th>Opcion</th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td> @Html.DisplayFor(modelItem => item.Usu_Codigo)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Persona.NombreCompleto)</td>
                                            <td> @Html.ActionLink("Asignar Data", "ExtraerDatosAsignar", new { iduser = item.Usu_Id, usuario = item.Persona.NombreCompleto })</td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </section>
</div>