@model IEnumerable<CapaEntidades.entUsuario>

@{
    ViewBag.Title = "ListaUsuarioAsesorCall";
    Layout = "~/Views/MasterPage.cshtml";
}

<section>
    <div class="section-body">
        <div class="card">
            <div class="card-body">

                <h2>ListaUsuarioAsesorCall</h2>
                <section class="style-default-bright">
                    <div>
                        <!-- BEGIN DATATABLE 1 -->
                        <div class="row">
                            <div class="col-lg-12">
                                @Html.ActionLink("Create New", "Create")
                                <div class="table-responsive">
                                    <table id="datatable1" class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Nº</th>
                                                <th class="sort-alpha">Nombres y Apellidos</th>
                                                <th class="sort-numeric">DNI</th>
                                                <th class="sort-alpha">Sucursal</th>
                                                <th class="sort-numeric">Telefono</th>
                                                <th class="sort-alpha">Estado</th>
                                                <th>Fecha Hasta</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{ int i = 0; }
                                            @foreach (var item in Model)
                                            {
                                                i++;
                                                <tr>
                                                    <td>
                                                        @i
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Persona.Per_Nombres)
                                                        @Html.DisplayFor(modelItem => item.Persona.Per_Apellidos)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Persona.Per_DNI)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Sucursal.Suc_Nombre)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Persona.Per_Telefono)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Usu_Estado)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Usu_FechaHasta)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                                        @Html.ActionLink("Details", "DetalleUsuario", new { UsuarioId = item.Usu_Id }) |
                                                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div><!--end .table-responsive -->
                            </div><!--end .col -->
                        </div><!--end .row -->
                        <!-- END DATATABLE 1 -->

                        <hr class="ruler-xxl" />
                    </div><!--end .section-body -->
                </section>

            </div><!--end .card-body -->
        </div>
    </div><!--end .section-body -->
</section>







