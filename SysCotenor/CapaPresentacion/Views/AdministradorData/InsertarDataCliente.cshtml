                                            <input type="text" class="form-control" name="txt_Telefono" id="id_Telefono" data-rule-number="true" onkeypress="return valida(event)" required>
                                            <label for="dgdsg" class="control-label">Telefono</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
