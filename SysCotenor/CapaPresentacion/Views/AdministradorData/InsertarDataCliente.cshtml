                                            <label for="dgdsg" class="control-label">Producto</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="txt_Direccion" id="id_Direccion" data-rule-minlength="2" required>
                                            <label for="dgdsg" class="control-label">Direccion</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="txt_Fecha_Alta" id="id_Fecha_Alta" data-inputmask="'alias': 'date'" required>
                                            <label for="dgdsg" class="control-label">Fecha Alta</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <input type="text" class="form-control dollar-mask" name="txt_F1" id="id_F1" required>
                                            <label for="dgdsg" class="control-label">Factura 1</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <input type="text" class="form-control dollar-mask" name="txt_F2" id="id_F2" required>
                                            <label for="dgdsg" class="control-label">Factura 2</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <input type="text" class="form-control dollar-mask" name="txt_F3" id="id_F3" required>
                                            <label for="dgdsg" class="control-label">Factura 3</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.DropDownListFor(m => m.Item1.Pro_ID, (SelectList)ViewBag.ListaProductosSVA, "", new { Name = "txt_svas", @class = "form-control select2-list", multiple = "multiple" })
                                            <label for="dgdsg" class="control-label">Servicios de Valor Agregado Contratados (SVA)</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <input type="hidden" name="txt_TipDoc" value="2" />
                                    <input type="hidden" name="txt_FecNac" value="" />
                                    <input type="hidden" name="txt_LugNac" value="" />
                                    <input type="hidden" name="txt_CliCorreo" value="" />
                                    <input type="hidden" name="txt_TelRef" value="" />
                                    <div class="col-lg-3">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-success btn-block" value="Registrar" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div><!--end .panel -->

            </div><!--end .panel-group -->
        </div><!--end .col -->
    </div>

</section>






