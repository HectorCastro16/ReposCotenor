    ViewBag.Title = "PedidosAsesoresCampo";
    Layout = "~/Views/MasterPage.cshtml";
}


<section>
    <h1>Estado de Ventas / Seguimiento / Actualización </h1>
    @{
        if (ViewBag.mensaje != null)
        {<br>
            <div class="alert-success">@ViewBag.mensaje</div>
