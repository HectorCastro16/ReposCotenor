@model IEnumerable<CapaEntidades.entArticulo>
    @using CapaEntidades
@{
    ViewBag.Title = "NoticiasEtc";
    Layout = "~/Views/MasterPage.cshtml";
}
    <section>
    <div class="col-lg-12">
        <h1>Noticias</h1>
    </div>
    <div class="section-body contain-lg">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-body style-primary no-y-padding">
                    <form class="form form-inverse" method="post" action="NoticiasEtc">
                        <div class="form-group">
                            <div class="input-group input-group-lg">
                                <div class="input-group-content">
                                    <input type="text" class="form-control" id="searchInput" name="search" placeholder="Título de la nota a buscar">
                                    <div class="form-control-line"></div>
                                </div>
                                <div class="input-group-btn">
                                    <input class="btn btn-floating-action btn-default-bright" type="submit"/><i class="fa fa-search"></i>
                                </div>
                            </div>
                        </div><!--end .form-group -->
                    </form>
                </div>
                @{
                    if (ViewBag.art != null)
                    {
                        <div class="card card-tiles style-default-light">
                            <div class="row">
                                <!-- BEGIN ARTICLES -->
                                <div class="col-sm-12">
                                    @{ 
                                        entArticulo a = (entArticulo)ViewBag.art;
                                        String autor = a.usuario.Persona.Per_Nombres + " " + a.usuario.Persona.Per_Apellidos;
                                        String perfil = a.usuario.TipoUsuario.TipUsu_Nombre;
                                    }
                                            <article>
                                                <div class="card-body style-default-dark">
                                                    <h2>@a.Art_Titulo</h2>
                                                    <div class="opacity-75"><i class="md md-today"></i> @Convert.ToDateTime(a.Art_FechaPublicacion).ToShortDateString() | @perfil</div>
                                                    <div class="opacity-75"><i class="md md-account-circle"></i> @autor</div>
                                                </div>
                                                <div class="card-body style-default-bright">
                                                    <p>
                                                        @a.Art_Descripcion
                                                    </p>
                                                    <a class="btn btn-default" href="@a.Art_Url">Ir a la nota</a>
                                                </div>
                                                </article>
                                    </div>
                                </div>
                            </div>
                    } /*----> End  if*/
            else if (ViewBag.art == null){
                        if (Model != null){
                <div class="card card-tiles style-default-light">
                    <div class="row">
                        <!-- BEGIN ARTICLES -->
                        <div class="col-sm-12">
                            @{
                                int i = 0;
                                foreach (entArticulo a in Model){
                                    String autor = a.usuario.Persona.Per_Nombres + " " + a.usuario.Persona.Per_Apellidos;
                                                String perfil = a.usuario.TipoUsuario.TipUsu_Nombre;
                                        <article>
                                            <div class="card-body style-default-dark">
                                                <h2>@a.Art_Titulo</h2>
                                                <div class="opacity-75"><i class="md md-today"></i> @Convert.ToDateTime(a.Art_FechaPublicacion).ToShortDateString() | @perfil</div>
                                                <div class="opacity-75"><i class="md md-account-circle"></i> @autor</div>
                                            </div>
                                            <div class="card-body style-default-bright">
                                                <p>
                                                    @a.Art_Descripcion
                                                </p>
                                                <a class="btn btn-default" href="@a.Art_Url">Ir a la nota</a>
                                            </div>
                                        </article>
                                    i++;
                                            }
                                        }
                                    </div>
                                    </div>
                                    </div>
                                }
                                else
                                { <div class="alert alert-info">No se encontro ningun resultado</div> }
                                    }
                                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <ul class="pagination pagination-lg">
                    <li class="disabled"><a href="#">«</a></li>
                    <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">»</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>

