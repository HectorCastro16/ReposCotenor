@{
    ViewBag.Title = "Ajustes";
    Layout = "~/Views/MasterPage.cshtml";
}


<script type="text/javascript">
    function validartext() {
        nuevapass = document.valida.pass1.value
        confnuevapass = document.valida.pass2.value
        if (nuevapass == confnuevapass)
            return true
        else
            mensaje = '<div class="alert alert-callout alert-danger"><strong>¡Oh no!</strong> Las contraseñas no coinciden.</div>'
        $("#mensaje").html(mensaje)
        return false
    }
</script>

