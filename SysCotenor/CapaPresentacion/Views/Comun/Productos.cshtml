@model IEnumerable<CapaEntidades.entProducto>

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/MasterPage.cshtml";
}

<section>
    <div class="section-body contain-lg">

        <form method="post" action="">
            
            <div class="col-lg-offset-1 col-md-4 col-sm-6">
								<div class="card">
									<div class="card-body">								
											<div class="form-group">
												<div class="input-group">
													<div class="input-group-content">
                                                        <select id="select1" name="select1" class="form-control" style="width:265px">
                                                            <option value="">Categoria</option>
                                                           @{ foreach (CapaEntidades.entCategoria c in
                                                                      CapaNegocio.negProducto.Instancia.ListCatego() ){
                                                                   <option value="@c.Cat_Id">@c.Cat_Nombre</option>

                                                                       }

                                                           }

                                                        </select>
													</div>
													
												</div>
											</div><!--end .form-group -->
											<div class="form-group">
												<div class="input-group">
													<div class="input-group-content">
														<input type="text" class="form-control" id="doublegroupbutton9" placeholder="Producto">
														<label for="doublegroupbutton9"></label>
													</div>
													
                                                    <select id="select1" name="select1" class="form-control">
                                                        <option value="">Precio</option>
                                                        @{ foreach (CapaEntidades.entPrecio pr in
                                                                               CapaNegocio.negProducto.Instancia.ListPrec())
                                                            {
                                                                <option value="@pr.Pre_ID">@pr.Pre_producto</option>

                                                            }

                                                        }
                                                    </select>
                                                    <div class="input-group-btn">
                                                        <button class="btn btn-default" type="button">Go!</button>
                                                    </div>
													
												</div><!--end .input-group -->
											</div><!--end .form-group -->
									
									</div><!--end .card-body -->
								</div><!--end .card -->							
							</div><!--end .col -->
        </form>

    </div>
    <div class="section-body contain-lg">
      
        <div class="row">
            <div class="col-lg-12">
                <div class="card-body no-padding">
                    <div class="card">
                        <div class="table-responsive no-margin">                       
                            <table id="datatable1" class="table table-striped table-hover">                             
                                <thead>                           
                                    <tr>
                                        <th>
                                            CODIGO
                                        </th>
                                        <th>
                                            NOMBRE
                                        </th>
                                        <th>
                                            CATEGORIA
                                        </th>
                                        <th>
                                            PRECIO S/
                                        </th>
                                        <th>
                                            IMAGEN
                                        </th>
                                        <th>
                                            
                                        </th>
                                       
                                    </tr>
                                </thead>

                                @foreach (var item in Model)
                                {
                                   
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pro_Codigo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pro_Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Categoria.Cat_Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Precio.Pre_producto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pro_Imagen)
                                        </td>

                                         <td><a href="@Url.Action("#", "#", new {id= item.Pro_ID})" class="btn ink-reaction btn-info"><i class="md md-undo"></i> Actualizar</a></td>

                                    
                                            
                                           
                                    </tr>

                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

