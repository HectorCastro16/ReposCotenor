@model IEnumerable<CapaEntidades.entUsuario>
@using CapaEntidades;
    @{
        ViewBag.Title = "ListaUsuarios";
        Layout = "~/Views/MasterPage.cshtml";
    }

    <section>
        <div class="section-body">
            <div class="card">
                <div class="card-body">
                    @{
                        entUsuario u = (entUsuario)Session["usuario"];
                        if (u.TipoUsuario.TipUsu_Id == 3) {<h2>Lista Usuario Asesor Call</h2>}
                        if (u.TipoUsuario.TipUsu_Id == 6) {<h2>Lista Usuario Asesor Campo</h2>}
                    }
                   
                    <section class="style-default-bright">
                        <div>
                            <!-- BEGIN DATATABLE 1 -->
                            <div class="row">
                                <div class="col-lg-12">
                                    @Html.ActionLink("Create New", "Create")
                                    <div class="table-responsive">
                                        <table id="datatable1" class="table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Nº</th>
                                                    <th class="sort-alpha">Nombres y Apellidos</th>
                                                    <th class="sort-numeric">DNI</th>
                                                    <th class="sort-numeric">Celular</th>
                                                    <th class="sort-numeric">Telefono</th>
                                                    <th class="sort-alpha">Estado</th>
                                                    <th>Fecha Hasta</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{ int i = 0; }
                                                @foreach (var item in Model)
                                                {
                                                    i++;
                                                    <tr>
                                                        <td>
                                                            @i
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Persona.NombreCompleto)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Persona.Per_DNI)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Persona.Per_Celular)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Persona.Per_Telefono)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Usu_Estado)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Usu_FechaHasta)
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                                            @Html.ActionLink("Details", "DetalleUsuario", new { UsuarioId = item.Usu_Id }) |
                                                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                                        </td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div><!--end .table-responsive -->
                                </div><!--end .col -->
                            </div><!--end .row -->
                            <!-- END DATATABLE 1 -->

                            <hr class="ruler-xxl" />
                        </div><!--end .section-body -->
                    </section>

                </div><!--end .card-body -->
            </div>
        </div><!--end .section-body -->
    </section>
